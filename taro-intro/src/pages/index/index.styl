.banner {
    width: 100%; 
    height: 839px;
    display: block;
}
.index-content {
    padding-left: 60px;
}
.search-tip {
    color: #6f6367;
    font-size: 40px;
    line-height: 1; 
    margin-top: 83px;
    margin-bottom: 49px;
    font-weight: bold; 
}
.search-wrapper {
    position relative;    
}
.search-icon {
    background: url('../../assets/search.png');
    background-size: cover;
    width: 45px;
    height: 45px;   
    position: absolute;
    top: 35px;
    left: 25px;
}
.search-input {
    background-color: #f5f7f9;
    color: #666;
    font-size: 32px;
    height: 113px;
    line-height: 113px;
    width: 820px;
    border-radius: 15px;
    padding-left: 97px;
    box-sizing: border-box;
}
.pet-list-wrapper {
    overflow-x: scroll;    
    margin-top: 84px;
}
.pet-list {
    white-space: nowrap;
    min-height: 508px;
}
.pet-item {
    display: inline-block;
    width: 317px;
    height: 508px;
    margin-right: 48px;
}